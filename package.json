{
	"name": "template-electron-svelte",
	"version": "0.0.1",
	"main": "./src/electron.mjs",
	"scripts": {
		"dev": "run-p dev-s dev-e",
		"dev-s": "vite dev",
		"dev-e": "electron-forge start",
		"preview": "run-p preview-s preview-e",
		"preview-s": "vite preview",
		"preview-e": "NODE_ENV=production electron-forge start",
		"build": "run-p build-s build-e",
		"build-s": "vite build",
		"build-e": "NODE_ENV=production electron-forge make",
		"test": "npm run test:integration && npm run test:unit",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"publish": "electron-forge publish",
		"lint-electron": "echo \"No linting configured\""
	},
	"devDependencies": {
		"@electron-forge/cli": "^7.4.0",
		"@electron-forge/maker-deb": "^7.4.0",
		"@electron-forge/maker-rpm": "^7.4.0",
		"@electron-forge/maker-squirrel": "^7.4.0",
		"@electron-forge/maker-zip": "^7.4.0",
		"@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
		"@electron-forge/plugin-fuses": "^7.4.0",
		"@electron/fuses": "^1.8.0",
		"@fontsource/fira-mono": "^4.5.10",
		"@neoconfetti/svelte": "^1.0.0",
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-static": "^3.0.1",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "^8.56.7",
		"cross-env": "^7.0.3",
		"electron": "30.0.9",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"ts-node": "^10.9.2",
		"tslib": "^2.4.1",
		"typescript": "^5.4.5",
		"typescript-eslint": "^8.0.0-alpha.20",
		"vite": "^5.0.3",
		"vitest": "^1.2.0"
	},
	"type": "module",
	"keywords": [],
	"description": "Electron Application",
	"author": {
		"name": "",
		"email": ""
	},
	"license": "MIT",
	"dependencies": {
		"electron-squirrel-startup": "^1.0.1"
	}
}
